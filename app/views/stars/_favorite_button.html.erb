<% if current_user.favoriting?(a_post) %>
  <%= form_with(model: current_user.stars.find_by(favorite_id: a_post.id), local: true, method: :delete) do |f| %>
    <%= hidden_field_tag :favorite_id, a_post.id %>
    <%= f.submit 'Unfavorite', class: 'btn btn-danger btn-sm' %>
  <% end %>
<% else %>
  <%= form_with(model: current_user.stars.build, local: true) do |f| %>
    <%= hidden_field_tag :favorite_id, a_post.id %>
    <%= f.submit 'Favorite', class: 'btn btn-primary btn-sm' %>
  <% end %>
<% end %>
